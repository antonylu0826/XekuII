// Parse arguments
var entitiesDir = args[0];
var boOutputDir = "../XekuII.Generated";
var controllersOutputDir = (string?)null;
var targetNamespace = "XekuII.Generated";

for (int i = 1; i < args.Length; i++)
{
    switch (args[i])
    {
        case "--output":
            if (i + 1 < args.Length) boOutputDir = args[++i];
            break;
        case "--controllers":
            if (i + 1 < args.Length) controllersOutputDir = args[++i];
            break;

        case "--namespace":
            if (i + 1 < args.Length) targetNamespace = args[++i];
            break;
    }
}

// Resolve paths
entitiesDir = Path.GetFullPath(entitiesDir);
boOutputDir = Path.GetFullPath(boOutputDir);
